<p id="notice"><%= notice %></p>

<h1>Listing Alumnus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Date of birth</th>
      <th>Place of birth</th>
      <th>Religion</th>
      <th>Gender</th>
      <th>Faculty</th>
      <th>Sub faculty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnus.each do |alumnu| %>
      <tr>
        <td><%= alumnu.name %></td>
        <td><%= alumnu.address %></td>
        <td><%= alumnu.date_of_birth %></td>
        <td><%= alumnu.place_of_birth %></td>
        <td><%= alumnu.religion %></td>
        <td><%= alumnu.gender %></td>
        <td><%= alumnu.faculty %></td>
        <td><%= alumnu.sub_faculty %></td>
        <td><%= link_to 'Show', alumnu %></td>
        <td><%= link_to 'Edit', edit_alumnu_path(alumnu) %></td>
        <td><%= link_to 'Destroy', alumnu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

