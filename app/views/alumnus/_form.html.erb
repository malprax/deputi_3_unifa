<%= simple_form_for(@alumnu, html:{class:'form-horizontal'}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, label: "Nama" %>
    <%= f.input :address, label: "Alamat" %>
    <%= f.input :place_of_birth, label: "Tempat Lahir" %>
    <%= f.input :date_of_birth, label: "Tanggal Lahir" %>

    <%= f.input :religion, label: "Agama" %>
    <%= f.input :gender, label: "Jenis Kelamin" %>
    <%= f.input :faculty, label: "Fakultas" %>
    <%= f.input :sub_faculty, label: "Jurusan" %>

    <%= f.button :submit, "Input" %>

<% end %>
