<%= simple_form_for(@scholarship_registration) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :date_of_birth %>
    <%= f.input :religion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
